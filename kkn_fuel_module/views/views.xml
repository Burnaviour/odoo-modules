<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="view_kkn_fuel_list">
      <field name="name">kkn_fuel_module list</field>
      <field name="model">kkn_fuel_module.kkn_fuel_module</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" />

        </tree>
      </field>
    </record>


    <record id="view_kkn_fuel_form" model="ir.ui.view">
      <field name="name">Kkn.close.pop.form</field>
      <field name="model">kkn_fuel_module.kkn_fuel_module</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name" />
          </group>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="kkn_fuel_module.action_window">
      <field name="name">Fuel</field>
      <field name="res_model">kkn_fuel_module.kkn_fuel_module</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Add fuel card!
        </p>
      </field>
    </record>


