<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!--form view-->
    <record id="patient_tag_form_view" model="ir.ui.view">
        <field name="name">patient.tag.form</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>

                            <field name="name"/>
                        <field name="sequence"/>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                        <field name="color" widget="color_picker"/>
<!--                        <field name="color2" widget="color"/>-->
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--Tree view-->
    <record id="patient_tag_tree_view" model="ir.ui.view">
        <field name="name">patient.tag.tree</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">

            <tree>
                <field name="name"/>
                <field name="active"  />
                <field name="color" widget="color_picker"  />
<!--                <field name="color2" widget="color"  />-->




            </tree>
        </field>
    </record>
    <!--search view-->


    <!--action window for appointment screen -->

    <record id="action_patient_tag" model="ir.actions.act_window">


        <field name="name">Patient tag</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">patient.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">

                Create your first tag
            </p>
        </field>
        <field name="context">{}</field>


    </record>

    <menuitem id="menu_patient_tag" name="Tags" action="action_patient_tag"
              sequence="10"
              parent="menu_configuration"/>


</odoo>

