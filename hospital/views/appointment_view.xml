<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!--form view-->
    <record id="hospital_appointment_form_view" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <header>

                    <!--                    test button to change fields data -->
                    <!--                    state only show which button to appear in which state -->
                    <button string="In Consultation" data-hotkey="v" class="oe_highlight"
                        type="object"
                        name="action_in_consultation" states="draft" />

                    <!--                    test button to change fields data -->
                    <button class="oe_highlight" string="Mark as Done" data-hotkey="n" type="object"
                        name="action_done"
                        states="in_consultation" />
                    <button string="Reset to Draft" class="oe_highlight" type="object"
                        data-hotkey="m"
                        name="reset_to_draft" states="cancel" />

                    <!--                    cancel using object type button-->
                    <button string="Cancel" data-hotkey="x" type="object"
                        name="test_obj" />


                    <!--                     running wizard using action window in a button -->
                    <button name="%(hospital.action_cancel_appointment)d" string="Cancel"
                        data-hotkey="x" type="action"
                        context="{'default_appointment_id':active_id,'hide_appointment':1}"
                        states="draft,in_consultation" />

                    <!--               added status bar-->
                    <!--                   removed  options="{'clickable':'1'} from form -->
                    <field name="state" widget="statusbar"
                        statusbar_visible="draft,done,in_consultation"
                    />
                </header>
                <sheet>
                    <!-- setting priority for appointment -->
                    <div>
                        <h1>
                            <field name="name" />
                        </h1>
                        <h1>
                            <field name="priority" widget="priority" />

                        </h1>
                    </div>

                    <group>
                        <group>
                            <!--Getting
                            relation data from patient model-->
                            <field name="patient_id" />
                            <!--focus
                            the field where cursor should appear -->
                            <field name="booking_date" default_focus="1" />

                            <field name="gender" />
                            <!-- getting doctor data from res.users-->
                            <field name="doctor_id" />
                            <field name="operation" />
                        </group>
                        <group>

                            <field name="appointment_time" />
                            <field name="hide_price" />
                            <field name="ref" readonly="1" force_save="1" />

                            <!-- Button which run python function -->
                            <!--                            button string="Ok" class="oe_highlight" type="object"
                            name="action_done" help="runs done function"/>-->
                        </group>

                    </group>
                    <notebook>
                        <page string="Pharmacy" name="pharmacy">
                            <field name="pharmacy_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id" />
                                    <field name="price_unit"
                                        decoration-bf="1"
                                        widget="monetary"
                                        options="{'currency_field':'company_currency_id' }"
                                        attrs="{'column_invisible': [('parent.hide_price', '=', True)]}" />
                                    <field name="qty" />
                                    <field name="appointment_id" decoration-it="1" />
                                    <field name="company_currency_id"
                                        invisible="1"
                                    />
                                    <field name="price_subtotal" />
                                </tree>
                                <form> I <field name="product_id" />
                                    <field name="price_unit" />
                                    <field
                                        name="qty" />
                                </form>
                            </field>
                        </page>

                        <!--   added html fields-->
                        <!--                     collaborative pads removed in odoo 16
                        options="{'collaborative':true}-->
                        <page name="prescription" string="Prescription">

                            <field name="prescription" placeholder="Enter your Prescription"
                                options="{'resizable':true,'codeview': true}" />
                        </page>
                    </notebook>
                </sheet>
                <!--added
                chatter-->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>
    <!--Tree
    view-->
    <record id="hospital_appointment_tree_view" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <!--   Added decoration in tree and fields of tree view -->
            <tree decoration-success="state == 'done'"
                decoration-danger="state == 'cancel'" sample="1" multi_edit="1">
                <header>
                    <button string="In Consultation" type="object"
                        name="action_in_consultation" />
                </header>
                <field name="name" />
                <field name="patient_id" />
                <field name="appointment_time" optional="show" />
                <field name="gender" optional="hide" />
                <field name="booking_date" />
                <field name="doctor_id" widget="many2one_avatar_user" />
                <field name="activity_ids" widget="list_activity" />
                <field name="state"
                    decoration-info="state == 'draft'"
                    decoration-success="state == 'done'" decoration-danger="state == 'cancel'"
                    decoration-muted="state == 'in_consultation'"
                    widget="badge" />
                <button class="fa fa-check btn-success" type="object" name="action_done"
                    title="tick"
                    attrs="{'invisible':[('state' ,'!=','in_consultation')]}" />
                <button name="%(hospital.action_cancel_appointment)d" title="cross"
                    class="fa fa-times btn-danger" type="action"
                    context="{'default_appointment_id':active_id,'hide_appointment':1}"
                    attrs="{'invisible':[('state' ,'not in',('draft','in_consultation'))]}" />
                <groupby name="patient_id">
                    <button name="edit" type="edit" icon="fa-edit" title="Edit" />
                </groupby>
            </tree>
        </field>
    </record>
    <!--search
    view-->

    <record id="hospital_appointment_search_view" model="ir.ui.view">
        <field name="name">hospital.appointment.search</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <search>
            </search>
        </field>
    </record>

    <record id="hospital_appointment_activity_view" model="ir.ui.view">
        <field name="name">hospital.appointment.activity</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <!--   Added decoration in tree and fields of tree view -->
            <activity string="Appointments">
                <field name="patient_id" />
                <field name="ref" />
                <templates>
                    <div t-name="activity-box">
                        <img
                            t-att-src="activity_image('hospital.patients', 'image', record.patient_id.raw_value)"
                            t-att-title="record.patient_id.value"
                            t-att-alt="record.patient_id.value" />
                        <div>
                            <field name="ref" display="full" />
                        </div>
                    </div>
                </templates>
            </activity>
        </field>
    </record>

    <!--action
    window for appointment screen -->
    <record id="action_hospital_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form,activity</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">

                Create Appointment record
            </p>
        </field>
        <field name="context">{}</field>

    </record>
    <!--   add new menu item in rot menu named Appointment  -->
    <menuitem id="menu_hospital_appointment_patients" name="Patients"
        action="action_hospital_appointment" sequence="10"
        parent="menu_hospital_appointment" />

</odoo>