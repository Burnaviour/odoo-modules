<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hospital_form_view" model="ir.ui.view">
        <field name="name">hospital.patients.form</field>
        <field name="model">hospital.patients</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_view_appointment"
                                type="object" icon="fa-star"
                               >
                            <field name="appointment_count" widget="statinfo" />
                        </button>
                     
                    </div>
                    <div class="oe_title">
                        <h4>
                            <field name="ref"
                                readonly="1"
                            />
                        </h4>

                        <h2>


                            <label for="name" string="Name" class="oe_edit_only">
                            </label>
                            <field name="name" />
                        </h2>

                    </div>
                    <group>
                        <group>

                            <field name="dob" />
                            <field name="age" />
                            <field name="appointment_count" />

                        </group>
                        <group>
                            <field name="image" widget="image" class="oe_left oe_avatar"
                                options="{'zoom': true, 'readonly': True}" />
                            <!--                  Using context send by female menu -->
                            <field name="gender" invisible="context.get('hide_gender')" />
                            <field name="ref" />
                            <field name="active" string="Active" invisible="1" />
                            <!--                            tags of patients-->
                            <field name="patient_tag" widget="many2many_tags"
                                options="{'color_field': 'color', 'no_create_edit': True}" />

                        </group>


                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>

            </form>
        </field>
    </record>
    <!--Tree
    view-->
    <record id="hospital_tree_view" model="ir.ui.view">
        <field name="name">hospital.patients.tree</field>
        <field name="model">hospital.patients</field>
        <field name="arch" type="xml">
            <!--remove
            create option for create="0" -->
            <tree>
                <field name="ref" string="Reference No" />
                <field name="name" string="Patient Name " />
                <field name="age" string="Age" avg="Average" />
                <field name="gender" string="Gender" />
                <field name="appointment_count" force_save="1" sum="Total Appointment" />
                <field name="patient_tag" string="Tags" widget="many2many_tags"
                    options="{'color_field': 'color', 'no_create_edit': True}" />

            </tree>
        </field>
    </record>
    <!--    search view-->
    <record id="hospital_search_view" model="ir.ui.view">
        <field name="name">hospital.patients.search</field>
        <field name="model">hospital.patients</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Patient Name"
                    filter_domain="['|','|','|' ,('name','ilike',self), ('gender','ilike',self), ('ref','ilike',self)]" />
                <field name="age" string="Age" />
                <field name="gender" string="Gender" />
                <field name="ref" string="Reference" />
                <filter string="Male" name="filter_male" domain="[('gender', '=', 'male')]" />
                <filter string="Female" name="filter_female" domain="[('gender', '=', 'female')]" />
                <separator />
                <filter string="Archived" name="Archived_filter" domain="[('active', '=', False)]" />


                <group expand="0" string="Group By">
                    <filter name="group_by_gender" string="Gender" context="{'group_by':'gender'}" />
                </group>
                <searchpanel>
                    <field name="gender" enable_counters="1" />
                </searchpanel>
            </search>
        </field>
    </record>

    <!--    menu action responsible for appearing menus  -->
    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patients</field>
        <field name="view_mode">tree,form</field>
        <!-- html type   -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create patient record
            </p>
        </field>
        <!--Setting
        context for default Value -->

        <field name="context">{"search_default_filter_male":0,"search_default_group_by_gender":0}</field>


    </record>
    <menuitem id="menu_hospital_patients" name="Patient" action="action_hospital_patient"
        sequence="0" parent="menu_hospital_master" />

</odoo>