<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_hospital_female_patient" model="ir.actions.act_window">


        <field name="name">Female Patients Details</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patients</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">

                Create Female patient record
            </p>
        </field>
        <field name="context">{'default_gender':'female','default_age':20,'hide_gender':1}</field>
        <field name="domain">[('gender', '=', 'female')]</field>

    </record>
    <menuitem id="menu_hospital_female_patients" name="Female Patients" action="action_hospital_female_patient"
              sequence="0"
              parent="menu_hospital_master"/>

</odoo>

