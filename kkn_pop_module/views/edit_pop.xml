<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_kkn_edit_pop_tree" model="ir.ui.view">
        <field name="name">Kkn.edit.pop.tree</field>
        <field name="model">edit_pop_module</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>

        </field>
    </record>

    <record id="view_kkn_edit_pop_form" model="ir.ui.view">
        <field name="name">kkn.edit.pop.form</field>
        <field name="model">edit_pop_module</field>
        <field name="arch" type="xml">
            <form>
                <group>

                    <field name="name" placeholder="Enter edit pop name"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_edit_pop" model="ir.actions.act_window">
        <field name="name">Edit Pop</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">edit_pop_module</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                EDIT pop!
            </p>
        </field>
    </record>

    <menuitem id="menu_kkn_edit_pop_root"
              name="Edit Pop"
              action="action_edit_pop"
              parent="menu_kkn_pop_operation_root"
              sequence="1"/>

</odoo>